 @using CloupardTask.Api.Models
@using CloupardTask.Service.ViewModels.Products
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@model IEnumerable<ProductViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/main.css">
    <title>Products</title>
</head>
<body>
    <div class="container">
        <h2>Products</h2>
        <hr>

        <div class="search-container">
            <form action="@Url.Action("GetAllProducts", "Product")" method="get">
                <div>
                    <input class="search-input" type="search" placeholder="Search..." name="name">
                    <button type="submit" class="search-button">Search</button>
                </div>
            </form>
            <button id="open-popup">Add product</button>
        </div>

        <div>
            <h3>Product Table</h3>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var index = 1;
                    }

                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Price</td>
                            <td>@product.CategoryName</td> <!-- Assuming Category is included in the view model -->
                            <td class="action-buttons">
                                <button class="edit">Edit</button>
                                <form method="post" action="@Url.Action("Delete", "Product")" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <button class="delete" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
        <hr>

        <!-- Popup for adding product -->
        <div id="popup" class="popup">
            <div class="popup-content">
                <span class="close">&times;</span>
                <form id="add-product-form" method="post" action="/Product/AddProduct">
                    <label for="name">Name:</label><br>
                    <input type="text" id="name" name="Name" required><br>
                    <label for="description">Description:</label><br>
                    <textarea id="description" name="Description"></textarea><br>
                    <label for="price">Price:</label><br>
                    <input type="number" id="price" name="Price" step="0.01" required><br>
                    <label for="category">Category:</label><br>
                    <input type="text" id="category" name="CategoryName" required><br>
                    <button type="submit">Add Product</button>
                </form>
            </div>
        </div>

        <!-- Popup for editing product -->
        <div id="edit-product-modal" class="popup">
            <div class="popup-content">
                <span class="close">&times;</span>
                <h2>Edit Product</h2>
                <form method="post" action="/Product/UpdateProduct">
                    <input type="hidden" id="edit-product-id" name="Id">
                    <label for="edit-product-name">Name:</label><br>
                    <input type="text" id="edit-product-name" name="Name"><br>
                    <label for="edit-product-description">Description:</label><br>
                    <textarea id="edit-product-description" name="Description"></textarea><br>
                    <label for="edit-product-price">Price:</label><br>
                    <input type="number" id="edit-product-price" name="Price" step="0.01"><br>
                    <label for="edit-product-category">Category:</label><br>
                    <input type="text" id="edit-product-category" name="CategoryName"><br>
                    <button type="submit">Save Changes</button>
                </form>
            </div>
        </div>

    </div>
    <script src="~/js/main.js"></script>
</body>
</html>
